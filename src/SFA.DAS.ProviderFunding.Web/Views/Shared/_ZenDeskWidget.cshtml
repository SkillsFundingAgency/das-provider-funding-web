@using SFA.DAS.ProviderFunding.Web.Extensions
@using SFA.DAS.Provider.Shared.UI.Models

@inject IOptions<ZenDeskConfiguration> Options
@{
    var sectionId = Options.Value?.SectionId;
    var snippetKey = Options.Value?.SnippetKey;
    var coBrowsingSnippetKey = Options.Value?.CobrowsingSnippetKey;
}

<script type="text/javascript">
    window.zESettings = {
        webWidget: {
            contactForm: {
                attachments: false
            },
            chat: {
                talk: {
                    nickname: "Tier 1 Support - Apprenticeships"
                },
                menuOptions: {
                    emailTranscript: false
                }
            },
            helpCenter: {
                filter: {
                    section: "@sectionId"
                }
            }
        }
    };
</script>
<script id="ze-snippet" src="https://static.zdassets.com/ekr/snippet.js?key=@snippetKey"></script>
<script id="co-snippet" src="https://embed-euw1.rcrsv.io/@coBrowsingSnippetKey?zwwi=1"></script>


@Html.SetZenDeskLabels($"empd-{ViewBag.Title}")